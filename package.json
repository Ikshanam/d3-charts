{
  "name": "@ikshanam/d3-charts",
  "version": "0.0.0-development",
  "author": "Anand Tiwary",
  "repository": "git@github.com:Ikshanam/d3-charts.git",
  "license": "MIT",
  "keywords": [
    "D3",
    "D3Js",
    "Charts",
    "Visualization"
  ],
  "scripts": {
    "clean": "rm -rf node_modules dist",
    "serve:cli": "ng serve",
    "build": "npm run bundle:libs",
    "bundle:libs": "rollup -c ./projects/charts/rollup.config.ts",
    "bundle:watch": "rollup -c ./projects/charts/rollup.config.ts -w",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "private": true,
  "dependencies": {
    "d3": "^5.9.2",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-typescript": "^8.2.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/github": "^7.2.0",
    "@semantic-release/npm": "^7.0.10",
    "@semantic-release/release-notes-generator": "^9.0.2",
    "@storybook/addon-actions": "^6.1.21",
    "@storybook/addon-essentials": "^6.1.21",
    "@storybook/addon-links": "^6.1.21",
    "@storybook/html": "^6.1.21",
    "@types/d3-array": "^1.0.12",
    "@types/d3-axis": "^1.0.12",
    "@types/d3-color": "^1.0.12",
    "@types/d3-format": "^1.0.12",
    "@types/d3-scale": "^1.0.12",
    "@types/d3-selection": "^1.0.12",
    "@types/d3-shape": "^1.0.12",
    "@types/d3-time-format": "^2.1.1",
    "@types/d3-transition": "^2.0.0",
    "@types/lodash-es": "^4.17.4",
    "babel-loader": "^8.2.2",
    "commitizen": "^4.0.3",
    "core-js": "^3.9.1",
    "css-loader": "^5.1.3",
    "cz-conventional-changelog": "^3.0.2",
    "d3": "^5.9.2",
    "husky": "^3.0.5",
    "jest": "^26.6.3",
    "jest-config": "^26.6.3",
    "jest-html-reporter": "^3.3.0",
    "jest-junit": "^12.0.0",
    "lodash-es": "^4.17.21",
    "prettier": "~1.18.2",
    "pretty-quick": "^1.11.1",
    "rollup": "^2.42.1",
    "rollup-plugin-copy": "^3.4.0",
    "semantic-release": "^17.4.2",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.5.3",
    "ts-loader": "^8.0.18",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "dist/charts"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "CHANGELOG.md",
              "label": "Changelog"
            }
          ]
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  }
}
